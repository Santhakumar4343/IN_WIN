package com.os.inwin.serviceImpl;

import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

@Service
public class StockMarketApiService {
    private static final String BASE_URL = "https://cloud.iexapis.com/stable";
    private static final String API_TOKEN = "pk_924aab9929b042b0a63cfcd12f2b72fe"; 

    private final RestTemplate restTemplate;

    public StockMarketApiService(RestTemplate restTemplate) {
        this.restTemplate = restTemplate;
    }

    public double getCurrentPrice(String symbol) {
        String apiUrl = BASE_URL + "/stock/" + symbol + "/quote/latestPrice?token=" + API_TOKEN;
        return restTemplate.getForObject(apiUrl, Double.class);
    }
}

